---
import Modal from "./Modal.astro";
---

<div class="flex items-center justify-center mt-20 mb-32 dark">
  <div
    class="w-full max-w-md bg-white/5 dark:bg-white/10 rounded-lg shadow-md p-6 md:p-10"
  >
    <form
      action="https://formspree.io/f/xnnawkew"
      method="POST"
      class="flex flex-wrap"
    >
      <div class="md:flex md:justify-between">
        <input
          type="text"
          class="bg-gray-700 text-gray-200 border-0 rounded-md p-2 mb-4 focus:bg-gray-600 focus:outline-none focus:ring-1 focus:ring-violet-500 transition ease-in-out duration-150 w-full md:w-[48%]"
          placeholder="Nombre"
          name="name"
          required
        />
        <input
          type="email"
          class="bg-gray-700 text-gray-200 border-0 rounded-md p-2 mb-4 focus:bg-gray-600 focus:outline-none focus:ring-1 focus:ring-violet-500 transition ease-in-out duration-150 w-full md:w-[48%]"
          placeholder="Email"
          name="email"
          required
        />
      </div>
      <textarea
        id="message"
        rows="3"
        class="bg-gray-700 text-gray-200 border-0 rounded-md p-2 mb-4 focus:bg-gray-600 focus:outline-none focus:ring-1 focus:ring-violet-500 transition ease-in-out duration-150 w-full resize-none"
        placeholder="Mensaje"
        name="message"
        required></textarea>
      <input type="text" name="_gotcha" style="display:none" />
      <button
        type="submit"
        class="items-center mt-2 cursor-pointer text-white text-center w-full bg-gradient-to-tr from-violet-900 to-black px-7 py-1 rounded-xl border-2 border-white/70 duration-200 hover:border-violet-700 hover:text-white hover:from-black hover:to-violet-950/80 hover:font-semibold"
      >
        Enviar
      </button>
    </form>
  </div>
</div>

<Modal id="form-modal" />

<script src="../scripts/form.js"></script>
